<Window x:Class="EduTrack.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EduTrack - Student Record Management System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Grid Background="#001133">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- App Title -->
            <TextBlock Text="EduTrack"
                       FontSize="48"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

            <!-- Subtitle -->
            <TextBlock Text="Student Record Management System"
                       FontSize="18"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <!-- Loading Progress -->
            <ProgressBar IsIndeterminate="True"
                         Width="320"
                         Height="22"
                         Foreground="#32CD32"
                         Background="#223355" />
        </StackPanel>
    </Grid>
</Window>
