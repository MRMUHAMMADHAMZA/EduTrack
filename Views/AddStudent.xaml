<Window x:Class="EduTrack.Views.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EduTrack - Add Student"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#00BFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009ACD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007BA7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- View Button Style -->
        <Style x:Key="ViewButtonStyle" TargetType="Button" BasedOn="{StaticResource AddButtonStyle}">
            <Setter Property="Background" Value="#32CD32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E8B57"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#006400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Error Text Style -->
        <Style TargetType="TextBlock" x:Key="ErrorMessageStyle">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <!-- Top Header -->
        <DockPanel LastChildFill="True" Background="#001133" Height="60" VerticalAlignment="Top">
            <TextBlock x:Name="txtHeader"
                       Text="EduTrack - Add Student"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Welcome, Admin"
                       Foreground="LightGray"
                       FontSize="14"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Left Navigation Sidebar -->
        <StackPanel Background="#223355" Width="220" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,60,0,0">
            <TextBlock Text="Student Management"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="20,20,0,20"/>

            <!-- Add Student Button (disabled in this window) -->
            <Button Content="Add Student" 
                    Style="{StaticResource AddButtonStyle}" 
                    IsEnabled="False"/>

            <!-- View Students Button -->
            <Button Content="View Students" 
                    Style="{StaticResource ViewButtonStyle}" 
                    Click="BtnViewStudents_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Border Margin="240,80,20,20" Background="White" CornerRadius="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: ID + Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                        <TextBlock Text="ID" Margin="5"/>
                        <TextBox x:Name="txtId" Height="40" Margin="5"
                                 IsReadOnly="True" Background="#E0E0E0"
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBlock Text="Name" Margin="5"/>
                        <TextBox x:Name="txtName" Height="40" Margin="5"
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"
                                 TextChanged="Field_TextChanged"
                                 PreviewTextInput="txtName_PreviewTextInput"/>
                        <TextBlock x:Name="errName" Text="Name is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>

                    <!-- Row 1: Father Name + DOB -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                        <TextBlock Text="Father Name" Margin="5"/>
                        <TextBox x:Name="txtFather" Height="40" Margin="5"
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"
                                 TextChanged="Field_TextChanged"
                                 PreviewTextInput="txtName_PreviewTextInput"/>
                        <TextBlock x:Name="errFather" Text="Father name is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBlock Text="Date of Birth" Margin="5"/>
                        <DatePicker x:Name="dpDOB"
                                    Height="40" Margin="5"
                                    Loaded="dpDOB_Loaded"
                                    SelectedDateChanged="Field_DateChanged"/>
                        <TextBlock x:Name="errDOB" Text="Date of Birth is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>

                    <!-- Row 2: Gender + Contact -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                        <TextBlock Text="Gender" Margin="5"/>
                        <ComboBox x:Name="cbGender" Height="40" Margin="5" SelectionChanged="Field_SelectionChanged">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>
                        <TextBlock x:Name="errGender" Text="Gender is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                        <TextBlock Text="Contact No" Margin="5"/>
                        <TextBox x:Name="txtContact" Height="40" Margin="5"
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"
                                 TextChanged="txtContact_TextChanged"
                                 PreviewTextInput="txtContact_PreviewTextInput"
                                 MaxLength="12"/>
                        <TextBlock x:Name="errContact" Text="Contact number is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>

                    <!-- Row 3: Email + Degree -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="5">
                        <TextBlock Text="Email" Margin="5"/>
                        <TextBox x:Name="txtEmail" Height="40" Margin="5"
                                 VerticalContentAlignment="Center" Padding="5,0,0,0"
                                 TextChanged="TxtEmail_TextChanged"/>
                        <TextBlock x:Name="errEmail" Text="Email is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                        <TextBlock Text="Degree Program" Margin="5"/>
                        <ComboBox x:Name="cbDegree" Height="40" Margin="5" SelectionChanged="Field_SelectionChanged">
                            <ComboBoxItem Content="Computer Science"/>
                            <ComboBoxItem Content="Software Engineering"/>
                            <ComboBoxItem Content="Information Technology"/>
                            <ComboBoxItem Content="Artificial Intelligence"/>
                            <ComboBoxItem Content="Cyber Security"/>
                        </ComboBox>
                        <TextBlock x:Name="errDegree" Text="Degree Program is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>

                    <!-- Row 4: Address -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
                        <TextBlock Text="Address" Margin="5"/>
                        <TextBox x:Name="txtAddress" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="5"
                                 VerticalContentAlignment="Top" Padding="5,5,0,0"
                                 TextChanged="Field_TextChanged"/>
                        <TextBlock x:Name="errAddress" Text="Address is required" Style="{StaticResource ErrorMessageStyle}"/>
                    </StackPanel>

                    <!-- Row 5: Save -->
                    <Button Content="Save Student"
        Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
        Style="{StaticResource AddButtonStyle}" 
        HorizontalAlignment="Center"
        Margin="10"
        Click="BtnSave_Click"/>


                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
