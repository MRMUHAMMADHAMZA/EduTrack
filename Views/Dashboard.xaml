<Window x:Class="EduTrack.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EduTrack - Student Management Dashboard"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#00BFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009ACD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007BA7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- View Button Style -->
        <Style x:Key="ViewButtonStyle" TargetType="Button" BasedOn="{StaticResource AddButtonStyle}">
            <Setter Property="Background" Value="#32CD32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E8B57"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#006400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
    </Window.Resources>

    <Grid Background="#F5F7FA">

        <!-- Top Header -->
        <DockPanel LastChildFill="True" Background="#001133" Height="60" VerticalAlignment="Top">
            <TextBlock Text="EduTrack - Student Management Dashboard"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Welcome, Admin"
                       Foreground="LightGray"
                       FontSize="14"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Left Navigation Sidebar -->
        <StackPanel Background="#223355" Width="220" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,60,0,0">
            <TextBlock Text="Student Management"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="20,20,0,20"/>

            <Button Content="Add Student" 
                    Style="{StaticResource AddButtonStyle}" 
                    Click="BtnAddStudent_Click"/>

            <Button Content="View Students" 
                    Style="{StaticResource ViewButtonStyle}" 
                    Click="BtnViewStudents_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Border Margin="240,80,20,20" Background="White" CornerRadius="10">
            <StackPanel Margin="20">

                <!-- Quick Stats Cards -->
                <WrapPanel Margin="0,10,0,20">
                    <Border Background="#00BFFF" Width="200" Height="100" Margin="10" CornerRadius="10">
                        <TextBlock x:Name="txtTotalStudents"
                                   Text="Total Students: 0" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="#32CD32" Width="200" Height="100" Margin="10" CornerRadius="10">
                        <TextBlock x:Name="txtMaleStudents"
                                   Text="Male Students: 0" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="#FF69B4" Width="200" Height="100" Margin="10" CornerRadius="10">
                        <TextBlock x:Name="txtFemaleStudents"
                                   Text="Female Students: 0" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
