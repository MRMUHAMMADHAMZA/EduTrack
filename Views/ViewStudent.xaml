<Window x:Class="EduTrack.Views.ViewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EduTrack - View Students"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#00BFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009ACD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007BA7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- View Button Style -->
        <Style x:Key="ViewButtonStyle" TargetType="Button" BasedOn="{StaticResource AddButtonStyle}">
            <Setter Property="Background" Value="#32CD32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E8B57"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#006400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FFA500"/>
            <!-- Orange -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8C00"/>
                    <!-- DarkOrange -->
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF6600"/>
                    <!-- Deep Orange -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FF0000"/>
            <!-- Red -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                    <!-- Firebrick -->
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8B0000"/>
                    <!-- DarkRed -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <!-- Top Header -->
        <DockPanel LastChildFill="True" Background="#001133" Height="60" VerticalAlignment="Top">
            <TextBlock Text="EduTrack - View Students"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Welcome, Admin"
                       Foreground="LightGray"
                       FontSize="14"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Left Navigation Sidebar -->
        <StackPanel Background="#223355" Width="220" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,60,0,0">
            <TextBlock Text="Student Management"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="20,20,0,20"/>

            <!-- Add Student Button -->
            <Button Content="Add Student" 
                    Style="{StaticResource AddButtonStyle}" 
                    Click="BtnAddStudent_Click"/>

            <!-- View Students Button (disabled in this window) -->
            <Button Content="View Students" 
                    Style="{StaticResource ViewButtonStyle}" 
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Border Margin="240,80,20,20" Background="White" CornerRadius="10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Title + Search Bar -->
                <DockPanel Grid.Row="0" Margin="5" LastChildFill="True">
                    <!-- Header Text -->
                    <TextBlock Text="Student List"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#001133"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>

                    <!-- Search Section -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <!-- Search TextBox -->
                        <TextBox x:Name="txtSearch"
                                 Width="200"
                                 Height="30"
                                 Margin="5,0"
                                 VerticalAlignment="Center"
                                 Padding="5"
                                 ToolTip="Search by ID, Name, or Contact"
                                 TextChanged="txtSearch_TextChanged"/>

                        <!-- Search Button -->
                        <Button Content="🔍 Search"
                                Width="100" Height="30"
                                Margin="5,0"
                                Style="{StaticResource AddButtonStyle}"
                                Click="BtnSearch_Click"/>
                    </StackPanel>
                </DockPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dgStudents"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          Margin="5"
                          RowHeaderWidth="30"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Father Name" Binding="{Binding FatherName}" Width="150"/>
                        <DataGridTextColumn Header="DOB" Binding="{Binding DateOfBirth, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                        <DataGridTextColumn Header="Contact" Binding="{Binding ContactNo}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Degree" Binding="{Binding DegreeProgram}" Width="180"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="250"/>

                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏ Edit" Style="{StaticResource EditButtonStyle}" Click="BtnEdit_Click"/>
                                        <Button Content="🗑 Delete" Style="{StaticResource DeleteButtonStyle}" Click="BtnDelete_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>